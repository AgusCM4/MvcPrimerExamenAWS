@model IEnumerable<MvcPrimerExamenAWS.Models.Apuesta>

@{
    ViewData["Title"] = "Apuestas";
}

<h1>Apuestas</h1>

<p>
    <a class="btn btn-success" asp-controller="Apuestas" asp-action="NuevaApuesta">Nueva Apuesta</a>
</p>
@if (Model != null)
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.IdApuesta)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Usuario)
                </th>
                <th>
                    <h2>REAL MADRID</h2><p>(Goles)</p>
                </th>
                <th>
                    <h2>MAN CITY</h2><p>(Goles)</p>
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.IdApuesta)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Usuario)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.GolesLocal)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.GolesVisitante)
                    </td>
                </tr>
            }
        </tbody>
    </table>

}